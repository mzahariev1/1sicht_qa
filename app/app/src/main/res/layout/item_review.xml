<?xml version="1.0" encoding="utf-8"?><!--
The layout for one review item in the recycler view for reviews

Created by Hristo Klechorov
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   style="@style/AppTheme">


    <ImageButton
            android:id="@+id/delete_btn"
            android:layout_width="49dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/delete_icon"
            android:scaleType="fitCenter"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- We must change the text after implementation of the viewModels-->
    <TextView
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_width="200dp"
            android:id="@+id/reviewName"
            app:layout_constraintEnd_toStartOf="@+id/delete_btn"
            android:layout_marginEnd="88dp"
            style="@style/CustomTextView"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
    />

    <ImageView
            android:layout_width="122dp"
            android:layout_height="63dp"
            app:srcCompat="@drawable/classroom"
            android:id="@+id/imageView2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>