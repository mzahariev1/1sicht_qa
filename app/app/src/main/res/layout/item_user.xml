<?xml version="1.0" encoding="utf-8"?><!--
The layout for one user item in the recycler view for users

Created by Hristo Klechorov
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   style="@style/AppTheme">


    <ImageView
            android:id="@+id/iv_profilePic"
            android:layout_width="65dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/avatar_stock"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            style="@style/CustomTextView"
            app:layout_constraintStart_toEndOf="@+id/iv_profilePic"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="49dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/delete_icon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="fitCenter"/>


</androidx.constraintlayout.widget.ConstraintLayout>